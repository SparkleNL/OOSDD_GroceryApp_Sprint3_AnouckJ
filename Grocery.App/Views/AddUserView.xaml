<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.AddUserView"
             x:DataType="vm:AddUserViewModel"
             Title="AddUserView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Add User" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Full Name" Text="{Binding Name}" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Add User" Margin="0, 10" Command="{Binding AddUserCommand}"/>
        <Label Text="{Binding AddedUser}" TextColor="Green" />
        <Label Text="{Binding LoginMessage}" TextColor="Red" />
        <Button Text="Go back" Margin="0, 10" Command="{Binding GoBackCommand}"/>
    </StackLayout>
</ContentPage>